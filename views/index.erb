<div class="gallery page top">
  <br>
  <%gal=Dir.entries("public/imgz")-[".",".."]
gal.sort.reverse.each do |gal_name|%>
  <div class="container">
    <div class="well">
      <h2><%=gal_name%></h2>
      <div id="links">
        <div class="links">
          <%files=Dir.entries("public/imgz/#{gal_name}")-[".",".."]%>
          <%files.each do |file_name|%>
          <%=unless File.exist?("public/thumbs/#{file_name}")
`convert -define jpeg:size=200x200 "public/imgz/#{gal_name}/#{file_name}"  -thumbnail 150x150^ -gravity center -extent 150x150 "public/thumbs/#{file_name}"`
end%>
          <a data-description="<%=file_name[/\((.*?)\)/,1]%>" data-gallery href="/imgz/<%=gal_name%>/<%=file_name%>" title="<%=file_name[/^(.*?)\(/,1]%>">
            <img alt="<%=file_name[/\((.*?)\)/,1]%>" src="/thumbs/<%=file_name%>">
          </a>

          <%end%>
        </div>
      </div>
    </div>
  </div>
  <br>
  <%end%>
