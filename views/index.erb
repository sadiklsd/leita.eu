<script type="text/javascript">
$('#blueimp-gallery').on('slide', function (event, index, slide) {
        test=$('#links a').eq(index).data("description")
        $(this).find('.description').text(test)
});
  $(".button")
    .click(function (event) {
      event.preventDefault();

      test = $(this).attr('id');
      active = $(this).parent()
        .attr('class');
      if (active != "active") {
        $(".page").hide()
        $(".page").css({
          "opacity": "0"
        });

        $("." + test).show()
          .animate({
            "opacity": "1"
          }, "slow");
        $(".button").parent()
          .removeClass("active");
        $("#" + test).parent()
          .addClass("active")
      }
    });

  $("#fullscreen-checkbox").bootstrapSwitch({
    "size": "small",
    "labelText": "FULLSCREEN",
    "onColor": "info",
    "offColor": "primary",
    "baseClass": "gallery page bootstrap-switch"
  });
  $('input[name="my-checkbox"]')
    .on('switchChange.bootstrapSwitch', function (event, state) {
      var borderless = $(this).is(':checked');
      $('#blueimp-gallery').data('useBootstrapModal', !borderless);
      $('#blueimp-gallery').toggleClass('blueimp-gallery-controls', borderless);
      $('#blueimp-gallery').data('fullScreen', $(this).is(':checked'));

    });




</script>
